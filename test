
apiVersion: apps/v1
kind: Deployment
metadata:
  name: postgres
  namespace: pact
spec:
  replicas: 1
  selector:
    matchLabels:
      app: postgres
  template:
    metadata:
      labels:
        app: postgres
    spec:
      containers:
        - name: postgres
          image: postgres:13
          env:
            - name: POSTGRES_USER
              value: "pactuser"
            - name: POSTGRES_PASSWORD
              value: "pactpass"
            - name: POSTGRES_DB
              value: "pactbroker"
          ports:
            - containerPort: 5432
          volumeMounts:
            - name: postgres-storage
              mountPath: /var/lib/postgresql/data
      volumes:
        - name: postgres-storage
          emptyDir: {}
---
apiVersion: v1
kind: Service
metadata:
  name: postgres
  namespace: pact
spec:
  ports:
    - port: 5432
  selector:
    app: postgres
